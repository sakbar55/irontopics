<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @topic.title %>
</p>

<p>
  <strong>Long description:</strong>
  <div class="markdown">
  <%= @markdown.render(@topic.long_description).html_safe %>
  </div>
</p>

<p>
  <strong>Focus area:</strong>
  <%= @topic.focus_area %>
</p>

<ul>
  <% @topic.interests.each do |interest| %>
  <li><%= interest.level %> by <%= interest.user.email %> who said <%= interest.comment %></li>
  <% end %>
</ul>

<%= form_for(@topic.interests.new) do |f| %>
  <%= f.hidden_field :topic_id, value: @topic.id %>
  <div class="field">
  <%= f.label :level %>
  <%= f.text_field :level %>
  </div>
  <div class="field">
  <%= f.label :comment %>
  <%= f.text_area  :comment %>
  </div>
  <%= f.submit %>
<% end %>

<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back', topics_path %>
