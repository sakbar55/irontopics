<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @topic.title %>
</p>

<p>
  <strong>Long description:</strong>
  <%= @topic.long_description %>
</p>

<p>
  <strong>Focus area:</strong>
  <%= @topic.focus_area %>
</p>

<ul>
  <% @topic.interests.each do |interest| %>
  <li><%= interest.level %> by <%= interest.user.email %> who said <%= interest.comment %></li>
  <% end %>
</ul>

<div class="input-group">
<%= form_for(@topic.interests.new) do |f| %>
  <%= f.hidden_field :topic_id, value: @topic.id %>
  <div class="form-group">
    <%= f.label :level %>
    <%= f.text_field :level, class: "form_control" %>
  </div>
  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :comment, class: "form_control" %>
  </div>
  <%= f.submit %>
<% end %>
</div>

<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back', topics_path %>
